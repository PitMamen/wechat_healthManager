/* pages/login/login.wxss */
.top-logo{
  margin-top: 140rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading-view{
  margin-top: 500rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}
.loading-class{
  --loading-text-color: #1989fa;
}
.icon-image{
  display: flex;
  width: 200rpx;
  height: 200rpx;
}
.top-label{
  display: flex;
  margin-top: 14rpx;
  font-size: 24px;
}
.account{
  overflow: hidden;
  margin-top: 100rpx;
  margin-left: 96rpx;
  margin-right: 96rpx;
  height: 75rpx;
  background-color:white;
  border-radius: 5rpx;
  border-color: gray;
  border-width: 1rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input-image{
  display: flex;
  height: 36rpx;
  width: 36rpx;
}
.account-text{
  overflow: hidden;
  margin-left: 15rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  height: 65rpx;
}
.password-back{
  overflow: hidden;
  margin-top: 50rpx;
  margin-left: 96rpx;
  margin-right: 96rpx;
  height: 75rpx;
  background-color: white;
  border-radius: 5rpx;
  border-color: gray;
  border-width: 1rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.loginTap{
  margin-top: 150rpx;
  margin-left: 96rpx;
  margin-right: 96rpx;
  height: 80rpx;
  background-color: #0379FF;
  border-radius: 40rpx;
  color: white;
  font-size: 30rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.bottom-line{
  margin-left: 96rpx;
  margin-right: 96rpx;
  height: 1rpx;
  background-color: #E6E6E6;
}

/* 注册 */
.register-back{
  margin-left: 96rpx;
  margin-right: 96rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  position: relative;
}
.register{
  display: flex;
  flex-direction: row;
  flex: 1; 
  font-size: 15px;
  padding: 10rpx 30rpx;
  color: #0379FF;
  position: relative;
}
.forget-pswd{
  display: flex;
  flex-direction: row;
  padding: 10rpx 30rpx;
  font-size: 15px;
  color: #0379FF;
  position: relative;
}
/* 其他登录方式 */
.other-login{
  margin-top: 240rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.other-explain{
  font-size: 14px;
  color: #4D4D4D;
}

.wxLogin-image{
  margin-top: 15rpx;
  width: 44px;
  height: 34px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}