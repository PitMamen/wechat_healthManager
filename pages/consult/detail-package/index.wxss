}

.cicle {
    width: 14rpx;
    height: 14rpx;
    background: #959595;
    border-radius: 50%;
    margin-right: 30rpx;
}

.safe-bottom {
   
    width: 704rpx;
    bottom: 30rpx;
    margin-left: 24rpx;
    background-color: #FFEEC5;
    box-shadow: 0px 3rpx 6rpx 0px rgba(204,204,204,0.35);
    z-index: 99;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 30rpx;
    color: #73501B;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
.safe-bottom-box {
    position: fixed;
    width: 750rpx;
    bottom: 0;
    left: 0;
    background-color: #ffffff;
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
  
    z-index: 99;
    
    font-size: 30rpx;
    color: #73501B;
   
}
.picker-custom {
    --picker-cancel-action-color: #367BF5 !important;
    --picker-confirm-action-color: #367BF5 !important;
}
