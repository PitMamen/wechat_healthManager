.wrap {
    min-height: 100vh;
    background: #F5F6F9;
}
.wrap .top {
    padding: 28rpx 24rpx 35rpx 24rpx;
    background: #FFFFFF;
}
.wrap .top image {
    margin-right: 10rpx;
    width: 35rpx;
    height: 32rpx;
    vertical-align: middle;
}
.wrap .top text {
    font-size: 28rpx;
    font-weight: 400;
    color: #1A1A1A;
    line-height: 32rpx;
}
.slot-wrap {
    background: #FFFFFF;
}
.slot-wrap .list {
    padding: 7rpx 37rpx 7rpx 30rpx;
    overflow-y: auto;
}
.slot-wrap .list .item {
    margin-bottom: 10rpx;
}
.slot-wrap .list .item .title {
    margin-bottom: 38rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #1A1A1A;
    line-height: 30rpx;
}
.slot-wrap .list .item .sub-list .sub-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.slot-wrap .list .item .sub-list .sub-item image {
    margin-right: 13rpx;
    width: 133rpx;
    height: 133rpx;
}
.slot-wrap .list .item .sub-list .sub-item .right {
    flex: 1;
}
.slot-wrap .list .item .sub-list .sub-item .right .name {
    margin-bottom: 20rpx;
    max-width: 306rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #1A1A1A;
    line-height: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.slot-wrap .list .item .sub-list .sub-item .right .depart {
    margin-bottom: 22rpx;
    max-width: 306rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #666666;
    line-height: 28rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.slot-wrap .list .item .sub-list .sub-item .right .price {
    font-size: 24rpx;
    font-weight: 400;
    color: #999999;
    line-height: 36rpx;
}
.slot-wrap .list .item .sub-list .sub-item .right .price .num {
    margin-right: 10rpx;
    font-size: 36rpx;
    font-weight: 500;
    color: #F20D0D;
    line-height: 36rpx;
}
