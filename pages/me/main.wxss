.content-page{
  margin-top: 500rpx;
  margin: 26rpx;
  border-radius: 8px;
  overflow:hidden;
}
.top-card-wrap{
    margin-right: 12px;
    margin-left: 12px;
    margin-top: 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.top-todo-icon{
    height: 80rpx;
    width: 80rpx;
}
.top-card-text{

font-size: 26rpx;
margin-top: 13rpx;
color: #4D4D4D;
}
.toprightimg{
    position: absolute;
    top: 0;
    right: 0;
    width: 144rpx; 
    height: 108rpx;
}
.top-card{
    width: 214rpx;
height: 168rpx;
background: #FFFFFF;
box-shadow: 0px 3rpx 6rpx 0px rgba(204,204,204,0.35);
border-radius: 4rpx;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
}
 .top-card-hover{
    background: #eeeeee;
}


.todo-card {
  margin-right: 12px;
  margin-left: 12px;
  margin-top: 30rpx;
  border-radius: 4rpx;
  background-color: white;
  padding: 30rpx 0;  
}
.title-line{
    width: 6rpx;
height: 40rpx;
background: #278CFF;
}

.todo-title-view{
  display: flex;
  flex-direction: row;
  align-items: center;
   margin-left: 30rpx; 
   margin-bottom: 20rpx;
}
.todo-content-view{
    display: flex;
  flex-direction: row;
  flex-wrap: wrap;
   margin-left: 20rpx;
   margin-right: 20rpx;
}
.todo-content-item{
    display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 165rpx;
  height: 165rpx;
  background: #ffffff;
  border-radius: 8rpx;
}
.todo-content-item2{
    display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 165rpx;
  height: 165rpx;
  background: #ffffff;
  border-radius: 8rpx;
    color: #1A1A1A;
  padding: 19px 0 !important;
  font-size: 28rpx !important;
  line-height: 32rpx !important;
  border-width: 0rpx !important;
}
.todo-content-item-hover{
    background: #eeeeee;
}
.todo-content-text{
    margin-top: 13rpx;
    font-size: 28rpx;
color: #1A1A1A;
}
.todo-icon{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
  overflow: hidden;
}
.todo-title{
    font-size: 32rpx;
    color: #1A1A1A;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-left: 20rpx;
}
.todo-title-right{
  margin-left: auto;
}


.picker-custom{
  --picker-cancel-action-color:#367BF5 !important;
  --picker-confirm-action-color:#367BF5 !important;
}

