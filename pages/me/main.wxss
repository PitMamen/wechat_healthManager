  display: flex;
  align-items: center;
  color: white;
  position: relative;
  background-color: #ffffff;
  padding-top: 70rpx;
}
.header-box .avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.header-box .r {
  margin-left: 32rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.top-r{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 400rpx;
    height: 100%;
}
.top-button{
    display: flex;
    flex-direction: row;
    margin-left: auto;
    margin-right: 20rpx;
    background-color: white;
