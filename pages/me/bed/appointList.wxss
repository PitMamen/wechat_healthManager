page{
  background-color: #F7F8FF;
  padding-bottom: 50rpx;
}
.contentview{
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
  margin-right: 24rpx;
}
.taskcard{
  display:flex;
  flex-direction:column;
  background-color: #FFFFFF;
  width: 100%;
  border-radius: 5px;
  margin-top: 20rpx;

}
.task-content{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
  border-radius:10rpx;
  min-height: 260rpx;
}
.tasktitleviw{
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
 }
.cicle{
  border-radius: 50%;
  width: 10px;
  height: 10px; 
  margin-top: 10rpx;
  background-color: #2CCA78;
}
.side{
  margin: auto;
    background-color: #E2E2E5;
    width: 2px;
    height: 100%;
}

.content2{
  color: #1a1a1a;
  font-size:29rpx ;
  margin-top: 20rpx;
  font-weight: 500;
  width: 550rpx;
  overflow: hidden;
  white-space: nowrap; 
  text-overflow: ellipsis; 
}
.content-txt{
  margin-bottom: 25rpx;
  display: flex;
  flex-direction: row;
  font-weight: 500;
  font-size: 29rpx;
color: #1a1a1a;
margin-right: 10rpx;

}
.content-in-txt{
  color: #666666;
}
.task-content.box-con{
  position: absolute;
  right: 8rpx;
  top: 5rpx;
  font-size: 26rpx;
  color: white;
  z-index: 2;
  background-color: red;
}

 
.task-content span {
  position: absolute;
  border-top: 4rem solid #999999;
  border-left: 4rem solid transparent;
  right: 24rpx;
}
 
.task-content em {
  position: absolute;
  right: 30rpx;
  top:-122rpx;
  font-size: 12px;
  color: white;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
