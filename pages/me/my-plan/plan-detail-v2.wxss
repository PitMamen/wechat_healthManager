page{
  
}
.header-box {
    padding: 32rpx;
    display: flex;
    align-items: center;
  color: #4D4D4D;
    background-color: white;
  
    /* background-image: linear-gradient(to bottom,#4180F1,#61BAC0); */
  }
  .header-box .avatar {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
  }
  .header-box .btn {
    margin-left: 32rpx;
  }
  .header-box .r {
    margin-left: 32rpx;
    font-size: 28rpx;
  }
  .top-divider{
    width: 100%;
    height: 20rpx;
    background-color: #F5F5F5;
  }
  .title-date {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
    font-size: 32rpx;
    margin-bottom: 30rpx;
    margin-top: 5rpx;
    color: #1A1A1A;
  }
  .tag-blue {
    padding-left: 10rpx;
    padding-right: 10rpx;
    height: 42rpx;
    background: #EFF6FF;
    border: 1rpx solid #0379FF;
    border-radius: 2rpx;
    font-size: 22rpx;
    color: #0379FF;
    text-align: center;
    line-height: 42rpx;
  
}
  .top-right{
    margin-left: auto;
    display: flex;
    flex-direction:row;
  }
  .r{
    display: flex;
    flex-direction: column;
  }
  .uid{
    font-size: 22rpx;
    width: 148rpx;
    height: 30rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
  }
.contail{
  display: flex;
  flex-direction: column;
  padding: 25rpx;
}
.top-view{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 29rpx;
  }
.card-black{
  display:flex;
  flex-direction:column;

}
.top-content-view{
display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 30rpx;
}
.top-content{
  overflow: hidden; 
  width: 350rpx;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 1; 
  -webkit-box-orient: vertical;
}
   .title {
    font-weight: bold;
    font-size: 30rpx;
    
    color: #4D4D4D;

  }
  .task-title-text{
    left: 0;
    font-size: 16px;
    color: #1A1A1A;
    font-weight: bold;
    margin-right: 10rpx;
  }
  .top-r{
    margin-left: auto;
    display: flex;
    width: 200rpx;
    flex-direction: column;
    align-items: center;
  }
.divider{
  height: 1rpx;
  width: 100%;
  background-color: #ccc;
}

.goods-container {
  display: flex;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
}
.goods-box {
  width: 190rpx;
  height: 190rpx;
  margin-right: 10rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.image{
  width: 190rpx;
  height: 190rpx;
  overflow: hidden;
}