
<view class="header-box">
  <image class="avatar" src="{{userInfo.avatarUrl || '/image/avatar.png'}}" mode="aspectFill" binderror="avatarBinderror"></image>
  <view wx:if="{{userInfo}}" class="r">
    <view style="display: flex;flex-direction: row;float: left;flex: 1;">
      <view style=" font-size: 36rpx;">{{defaultPatient.userName}}</view>
      <view style="margin-left: 19rpx; margin-top: 10rpx; font-size: 28rpx;color: #92ADFB;">{{defaultPatient.userSex}}</view>
      <view style="margin-left: 19rpx; margin-top: 10rpx; font-size: 28rpx;color: #92ADFB;">{{defaultPatient.userAge}}岁</view>
    </view>
    <view bindtap="bindPatientTap" class="uid">当前就诊人</view>
  </view>
  <view wx:else  class="top-r" bindtap="checkLoginStatus">
    <view style=" font-size: 30rpx;margin-left: 20rpx;">添加就诊人</view>
  </view>
