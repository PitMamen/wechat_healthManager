<view class="todo-card">


  <view class="todo-title-view"  bindtap='goRecordListPage' >
    <image class="todo-icon" src="/image/me_icon_jkjl.png" />
    <text class="todo-title">健康记录</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
  <view class="todo-title-view"  bindtap='goMyPatientPage' >
    <image class="todo-icon" src="/image/me_icon_wdjzr.png" />
    <text class="todo-title">我的就诊人</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
  <view class="todo-title-view"  bindtap='goPlanPage' >
    <image class="todo-icon" src="/image/me_icon_wdjh.png" />
    <text class="todo-title">我的计划</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
  <view class="todo-title-view"  bindtap='goOrderListPage' data-type="0">
    <image class="todo-icon" src="/image/me_icon_wddd.png" />
    <text class="todo-title">我的订单</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
  <view class="todo-title-view"  bindtap='goTechnologyListPage' data-type="0">
    <image class="todo-icon" src="/image/me_icon_yyyj.png" />
    <text class="todo-title">预约医技</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
  <view class="todo-title-view"  bindtap='goMyEvalPage' >
    <image class="todo-icon" src="/image/me_jkpg.png" />
    <text class="todo-title">健康评估</text>
    <view class="todo-title-right">
      <van-icon color="#999999" name="arrow" />
    </view>
  </view>
  <van-divider />
</view>


<!-- 就诊人选择 -->
<van-popup show="{{ !hidePatientShow }}" round  position="bottom"
  custom-style="padding-top:10rpx;min-height: 20%;max-height: 80%;" bind:close="closePatientTap">
  <van-picker
  show-toolbar
  custom-class="picker-custom"
  title="切换就诊人"
  columns="{{ nameColumns }}"
  visible-item-count='4'
  cancel-button-text="添加"
  bind:cancel="onPatientPickerCancel"
  bind:confirm="onPatientPickerConfirm"
/>
</van-popup>