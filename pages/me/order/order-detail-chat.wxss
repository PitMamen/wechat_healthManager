}

.goods-box {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
    background: #F5F6FB;
    overflow: hidden;
    margin-bottom: 20rpx;
}


.price-box {
    width: 100vw;
    display: flex;
    margin-top: 30rpx;
    flex-direction: row;
    /* justify-content: center; */
    align-items: center;
    padding-bottom: 30rpx;
}

.price-box .btn-wrap {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    padding-right: 30rpx;
}

.price-box .btn {
    /* width: 180rpx; */
    padding: 0 40rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 30rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.price-box .active {
    border: 1px solid #367BF5;
    background-color: #367BF5;
    color: white;
}



.titleviw {
    height: 40px;

    margin-left: 30rpx;
    margin-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title-text {
    left: 0;
    /* font-weight: bold; */
    font-size: 16px;
    color: #1A1A1A;
}

.title-right {
    padding-right: 8px;
