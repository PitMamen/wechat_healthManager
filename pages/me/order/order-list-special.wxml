                    </view>
                    <view class="des-value" style="color: red;font-weight: bold;">
                        ￥{{item.orderTotal}}
                    </view>
                </view> -->

            </view>

            <view class="v-divider"></view>
        </view>

        <!-- 服务 -->
        <block>
            <!-- 1待支付、2进行中、3已完成、4已取消 -->
            <!-- goodsType 1仅咨询,2仅商品,9咨询商品混合 -->
            <view class="price-box">
                <view style="flex: 1;" />
                <!-- 待支付 -->
                <view class="btn-wrap">
                    <!-- <view class="btn" hidden="{{item.status.value==1? false : true}}" bindtap="cancelOrderTap" data-id="{{item.orderId}}">取消
                    </view>
                    <view class="btn active" hidden="{{item.status.value==1? false : true}}" bindtap="toPay" data-id="{{item.orderId}}" data-ordertype="{{item.orderType.value}}" data-money="{{item.amountReal}}" data-score="{{item.score}}">去支付</view> -->

                    <view class="btn active" hidden="true" bindtap="toPay">联系客服</view>
                    <view class="btn active" hidden="true" bindtap="toPay">服务详情</view>
                    <view class="btn active" hidden="{{item.status.value==2? false : true}}" bindtap="toPay">进入诊室</view>
                    <view class="btn active" hidden="{{item.status.value==2? false : true}}" bindtap="toPay">查看评价</view>
                    <view class="btn active" hidden="{{item.status.value==2? false : true}}" bindtap="toPay">再次咨询</view>
                </view>

                <!-- <view class="btn active" hidden="{{item.status.value==1? false : true}}" bindtap="toPay" data-id="{{item.orderId}}" data-ordertype="{{item.orderType.value}}" data-money="{{item.amountReal}}" data-score="{{item.score}}">去支付</view> -->

                <!-- 已完成 和 已取消 -->
                <!-- 下面的进行中 -->
                <!-- <view class="btn active" style="width: 80%;" hidden="{{(item.status.value==3||item.status.value==4)? false : true}}" bindtap="buyAgain" data-goods="{{item}}">
                    再次购买
                </view>
           
                <view class="btn active" data-goods="{{item}}" style="width: 80%;" wx:if="{{(item.status.value==2&& item.goodsType!=2)? true : false}}" bindtap="goConsult">
                    立即咨询
                </view> -->

            </view>
        </block>

    </view>
</view>