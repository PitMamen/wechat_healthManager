page {
    background-color: #F7F8FF;

}

.tabs {

    margin-bottom: 9px;
}

.content {
    height: 100vh;

    padding-bottom: 50rpx;
}

.container {
    width: 100%;
    background-color: #F2f2f2;
}

.titleviw {
    height: 40px;

    margin-left: 30rpx;
    margin-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.title-text {
    left: 0;
    font-weight: bold;
    font-size: 16px;
    color: #1A1A1A;
}

.title-right {
    padding-right: 8px;
    height: 20px;
    border-radius: 10px;
    background-color: #FFE5E5;
    font-size: 12px;
    color: #FF0000;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.countdown-class {
    --count-down-text-color: #FF0000;
}

.title-right-tx {
    height: 20px;
    border-radius: 10px 0 10px 10px;
    background-color: #FF0000;
    padding-left: 8px;
    padding-right: 8px;
    margin-right: 5px;
    color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.plan-text-min {
    font-size: 13px;
    color: #999999;
}

.status-box {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
}

.view-top-wrap {
    display: flex;
    width: 100%;
    flex-direction: row;

    /* justify-content: space-between; */
    align-items: center;
}

.view-contents {
    display: flex;
    width: 100%;
    margin-left: 30rpx;
    flex-direction: column;
    /* align-items: center; */
}

.desItem {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    margin-top: 3rpx;
    color: #999999;
    font-size: 28rpx;
}

.v-divider {
    width: 92%;
    height: 1rpx;
    background-color: #eee;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.v-describe {
    width: 100%;
}

.v-des-item {
    margin-left: 30rpx;
    display: flex;
    width: 100%;
    color: #4D4D4D;
    font-size: 30rpx;
    flex-direction: row;
    align-items: center;
}

.des-name {
    color: #999999;
    width: 150rpx;
}

.des-value {
    margin-left: 5rpx;
}

.shu-divider {
    width: 1rpx;
    height: 28rpx;
    background-color: #1A1A1A;
}

.status-box .status-label {
    width: 150rpx;
    height: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #353535;
    box-sizing: border-box;
    position: relative;
}

.status-box .status-label.active {
    color: #e64340;
    border-bottom: 6rpx solid #e64340;
}

.no-order {
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}

.no-order-img {
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}

.no-order .text {
    font-size: 28rpx;
    color: #999999;
    text-align: center
}

.order-list {
    width: 100%;
}

.order-list .a-order {
    width: 95%;
    margin-left: 20rpx;
    margin-right: 20rpx;
    border: 1rpx solid #F7F8FF;
    border-radius: 10rpx;
    background-color: #fff;
    margin-top: 20rpx;
}


.goods-img {
    width: 326rpx;
    height: 168rpx;
    margin-left: 30rpx;
}

.goods-price {
    font-size: 26rpx;
    text-align: right;

}

.goods-price .p {
    font-size: 36rpx;
    color: #e64340;
}

.goods-info .img-box {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}

.goods-info .img-box .goods-img,
.goods-img-container .img-box .goods-img {
    width: 120rpx;
    height: 120rpx;
}

.goods-info .goods-des {
    font-size: 26rpx;
    color: #000000;
}

.goods-img-container {
    height: 180rpx;
    box-sizing: border-box;
    white-space: nowrap;
}

.goods-img-container .img-box {
    width: 120rpx;
    height: 120rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    display: inline-block;
}

.price-box {
    width: 720rpx;
    display: flex;
    margin-top: 30rpx;
    flex-direction: row;
    /* justify-content: center; */
    align-items: center;
    padding-bottom: 30rpx;
}

.price-box .btn-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-right: 30rpx;
}

.price-box .btn {
    /* width: 180rpx; */
    padding: 0 40rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 30rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.price-box .active {
    border: 1px solid #409EFF;
    background-color: #409EFF;
    color: white;
}

.remark {
    color: #409EFF;
    margin-bottom: 20rpx;
}

.cell-title {
    color: #1A1A1A !important;
    font-size: 16px !important;
    font-weight: bold;
}

.kanjia-vcard {
    background-color: white !important;
    font-size: 15rpx;
    margin: 0rpx;
}

.van-card__price {
    margin-top: 24rpx;
}

.van-card__price-integer {
    font-size: 18px !important;
}