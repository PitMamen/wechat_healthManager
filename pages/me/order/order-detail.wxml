<block wx:if="{{order.functionType==0}}">
  <view class="titleviw">
      <text class="title-text">中南大学湘雅二医院</text>
    </view>
  <van-card wx:for="{{order.goodsInfo}}"  custom-class="kanjia-vcard"
    bindtap="toDetailsTap" data-id="{{item.goodsId}}"  price="{{item.price}}"
    num="x{{item.number}}" thumb="{{item.previewList}}" >
    <view class="cell-title" slot="title">
          <van-tag  round  type="primary">{{item.deptName}}</van-tag>
          {{item.goodsClassInfo.className}}
        </view>
        <view style="margin-top: 16rpx;" slot="tags">
          <van-tag  plain type="primary">{{item.goodsName}}</van-tag>
        </view>
  </van-card>
  <view class="titleviw">
      <text class="title-text">就诊人</text>
      <view  >
        <text decode>{{patient.userName}}&emsp;&ensp;{{patient.userSex}} | {{patient.userAge}}岁&ensp;</text>       
        
      </view>
    </view>
</block>

<block  wx:if="{{order.functionType==1}}">
  <view  class="address-list" >
    
    <view class="address-title"><van-tag type="success">默认</van-tag>湖南省长沙市岳麓区</view>
  <van-cell border="{{ false }}" title="{{order.address.linkMan}} {{order.address.mobile}}" label="{{order.address.address}}"  >
 </van-cell>
</view>
  <view class="card">
  <view class="titleviw">
      <text class="title-text">{{order.hospital}}</text>
    </view>
  <scroll-view class="goods-img-container" scroll-x="true">
    <view class="img-box" wx:for="{{order.medicationList}}" wx:key="index">
      <image src="{{item.pic}}" class="goods-img"></image>
    </view>
  </scroll-view>
</view>
</block>

<view class="content">
  <van-cell border="{{ false }}" title="订单编号" value="{{order.orderId}}" />
  <van-cell border="{{ false }}" title="下单时间" value="{{order.orderTime}}" />
  <van-cell border="{{ false }}" title="支付方式" value="在线支付" />
 
  <van-cell border="{{ false }}" title="商品金额" value="¥ {{order.payMoney}}" />
 
  <van-divider />
  <view class="price-bottom">
      <text >共1件</text>
      <view class="price-bottom-right" >
        <view class="t">合计：</view>
        <view class="n">¥ {{order.payMoney}}</view>
      </view>
    </view>

</view>

<!-- 从商品购买过来的 显示返回主页 -->
<block wx:if="{{fromtype == '1'}}">
  <view style="padding: 30rpx;margin-top: 30rpx;">
    <van-button round type="info" bindtap="goMain"  block>返回主页</van-button>
  </view>
</block>

