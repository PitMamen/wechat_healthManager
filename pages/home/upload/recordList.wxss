
page{
  background-color: #F7F8FF;
}
.divider-view{
  display: flex;
  align-items: center;
  padding: 0 20rpx ;
  }
.divider{
  width: 100%;
  height: 0.5px;
  background-color: #EBEDF0;
}
.card{
  margin:  15rpx ;
  border-radius: 8px;
  background-color: white;
  padding: 12px;
}

.card-black{
  display:flex;
  flex-direction:column;
  background-color: white;
  border-radius: 8rpx;
  width: 100%;
}
.content{
  color: #1A1A1A;
  font-size:29rpx ;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.titleviw{
   display: flex;
   align-items: center;
   padding: 20rpx;
   }
   .title-date {
    left: 0;
    font-weight: bold;
    font-size: 18px;
    color: #1A1A1A;
  }
   .title-text {
    left: 0;
    font-size: 18px;
    color: #1A1A1A;
    margin-left: 10rpx;
  }
  .title-right{
    margin-left: auto;
    font-size: 15px;
    color: #999999;
  }

  .space{
    height: 10px;
  }
  .buttonview{
    display:flex;
    justify-content:flex-end;
    margin-top: 30rpx;
  }
  

.goods-container {
  display: flex;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
}
.goods-box {
  width: 190rpx;
  height: 190rpx;
  margin-right: 10rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 10rpx;
}
.image{
  width: 190rpx;
  height: 190rpx;
  overflow: hidden;
}

.item-back{
  display: flex;
  width: 100%;
  background-color: white;
  border-bottom: 0.5rpx solid #eee;
  padding: 10rpx;
}
.left-content{
  float: left;
  margin-top: 6px; 
  margin-right: 15rpx;
  margin-left: 10rpx;
  flex-direction: row;
  flex: 1; 
  position: relative;
}
.title{
  font-size: 15px;
}

