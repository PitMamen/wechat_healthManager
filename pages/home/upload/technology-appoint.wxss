
.page {
    display: flex;
    flex-direction: column;

  }
  .uploader{
    margin-left: 30rpx;
  }
  .card {
   
    flex-grow: 1;
  height: 156rpx;
  background-color:#87CEFF ;
  border: 1rpx solid #CCCCCC;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  padding-left: 31rpx;
  }
  .top-name {
    margin-top: 30rpx;
    font-size: 30rpx;
    display: flex;
    color: #4071A1;
    font-weight: bold;
   
  }
  .top-item {
    display: flex;
    font-size: 24rpx;
    color: #4071A1;
    margin-top: 30rpx;
  }
  .title2{
    display: flex;
    flex-direction: row;
    color: #646566;
    margin-left: 26rpx;
  }
  .title-tip {
    font-size: 24rpx;
    color: rgba(109, 173, 86, 100);
  }
  .title-tip-red {
    font-size: 24rpx;
    color: rgb(238, 8, 8);
  }
  .top{
    width: 100%;
    display: flex;
    background-color: white;
    box-shadow: 0px 0px 5px 0px rgba(153, 153, 153, 0.35);
  
  }
  .top-tx{
    margin: 26rpx;
    color: rgb(238, 8, 8);
    font-size: 24rpx;
  }
  .title-q{
    margin-left: auto;
    width: 143rpx;
    padding-left: 20rpx;
    padding-top: 8rpx;
    margin-right: -26rpx;
  height: 40rpx;
  text-align: center;
  color: rgb(238, 8, 8);
  font-weight: 100;
  font-size: 24rpx;
  border-radius: 20px 0px 0px 20px;
  border: 1px solid rgba(187, 187, 187, 100);
  
  }
  .size-label-box .label {
    font-size: 26rpx;
    color: #000;
    padding-left: 30rpx;
    padding: 30rpx 0 20rpx 30rpx;
  }
  
  .size-label-box .label-item-box {
    display: flex;
    padding-left: 30rpx;
    padding-right: 30rpx;
    flex-direction: row;
    flex-wrap: wrap;
    background-color: white;
  }
  
  .size-label-box .label-item {
    font-size: 26rpx;
    color: #000;
    padding: 14rpx 20rpx;
    border: 1px solid rgb(204, 203, 203);
    border-radius: 6rpx;
    margin: 0 20rpx 20rpx 0;
  }
  
  .size-label-box .label-item.active {
    color: #0379FF;
    border: 1px solid #0379FF;
  }
  