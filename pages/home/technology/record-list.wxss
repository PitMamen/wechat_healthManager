    padding-bottom: 20rpx;
    border-radius:10rpx;
    min-height: 260rpx;
  }
  .tasktitleviw{
    display: flex;
    align-items: center;
    margin-bottom: 26rpx;
   }
  .cicle{
    border-radius: 50%;
    width: 10px;
