    </view>
    <view class="label-title">
        <view class="left">有效期</view>
        <view wx:if="{{goodsDetail.theLastTime}}" class="right">{{goodsDetail.theLastTime}}个月</view>
      </view>
    <view class="goods-des-info" id="goods-des-info">
      <view class="label-title">
