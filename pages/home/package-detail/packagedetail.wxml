      <view wx:if="{{goodsDetail.goodsClassInfo.classDescribe}}" class="characteristic">{{goodsDetail.goodsClassInfo.classDescribe}}</view>
      
      <view class="goods-profile">
          <view class="p"><text>¥</text> {{goodsDetail.price}}</view>
          <view class="right">销量{{goodsDetail.buyTheNumber || '0'}}</view>
        </view>
    </view>
    <view class="top-b">
      <van-tag custom-class="tag-class"  wx:for="{{goodsList}}" plain="{{index !== goodsIndex}}" bindtap="bindGoodsChooseTop" data-index="{{index}}" size="large"  type="primary">{{item.goodsName||'未知服务'}}</van-tag>
