<view class="container">

  <scroll-view class="scroll-container" scroll-into-view="{{toView}}" scroll-y="true" scroll-with-animation="true" bindscroll="bindscroll">
    <view class="swiper-container" id="swiper-container">
      <swiper class="swiper_box" indicator-dots="true" indicator-active-color="#fff" autoplay circular>
        <swiper-item wx:for="{{goodsDetail.bannerListArray}}" wx:key="id">
          <image src="{{item}}" class="slide-image" mode="scaleToFill" lazy-load="true" bindtap="bindLunboImg" data-index="{{item}}" />
        </swiper-item>
      </swiper>
    </view>
    <view class="goods-info">
