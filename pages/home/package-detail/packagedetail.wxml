<!-- 规格 -->
<van-popup show="{{ !hideShopPopup }}" round closeable position="bottom" custom-style="padding-top:48rpx;max-height: 80%;" bind:close="closePopupTap">
  <van-card centered price="{{ goodsDetail.price }}" title="{{ goodsDetail.goodsName }}" thumb="{{ goodsDetail.previewList}}"  />
  <view class="size-label-box">
    <block>
      <view class="label">购买期限</view>
      <view class="label-item-box">
        <view class="label-item {{item.active ? 'active' : '' }}" wx:for="{{properties}}" wx:key="id" bindtap="labelItemTap" data-propertyindex="{{item.goodsId}}">
          {{item.goodsSpecification}}
        </view>
      </view>
    </block>
  </view>
  <van-button data-shopType="{{shopType}}" bindtap="buyNow" type="danger" block>立即购买</van-button>
</van-popup>


