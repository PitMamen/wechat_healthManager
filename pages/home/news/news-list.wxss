page {
    background-color: #F7F8FF;
}

.top-screen {
    display: flex;
    height: 82rpx;
    width: 50%;
    color: #666666;
    font-size: 30rpx;
    background-color: white;
    align-items: center;
    flex-direction: row;
    justify-content: center;
}

.item-style {
    padding: 30rpx;
    font-size: 40rpx;
    text-align: center;
    border-top: 2rpx solid #eee;
}

.tag-view {
    margin-right: 26rpx;
    margin-left: 26rpx;
    padding-top: 20rpx;
    /* border-radius: 20rpx;
  padding: 10rpx;
  border: 1rpx solid  #BBBBBB ;
  background-color: white; */
}

.tag-class {
    margin-right: 20rpx;
    margin-top: 20rpx;
}

.back {
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
    border-radius: 8px;
    background-color: white;
}
.tab-class {
    flex: none !important;
  }

.item-back {
    display: flex;
    flex-direction: column;
    width: 710rpx;
    /* border-bottom: 0.5rpx solid #eee; */
    /* padding-top: 10rpx; */
    padding: 20rpx;

    min-height: 182rpx;
}

.left-content {
    margin-top: 6px;
    margin-right: 15rpx;
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    width: 475rpx;
}

.title {
    width: 515rpx;
    font-size: 32rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content {
    font-size: 28rpx;
    color: rgb(181, 183, 185);
    margin-top: 15rpx;
    /* 限制多行 */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content-dept {
    font-size: 30rpx;
    max-width: 150rpx;
    color: white;
    background-color: #3894FF;
    padding: 10rpx 30rpx;
    border-radius: 6rpx;
    /* 限制单行 */
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.content-brief {
    font-size: 30rpx;
    color: #409EFF;
    max-width: 150rpx;
    background-color: #F3F9FF;
    padding: 10rpx 30rpx;
    border: 1rpx solid #409EFF;
    border-radius: 6rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.read-num {
    font-size: 28rpx;
    color: rgb(181, 183, 185);
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    float: left;
}

.send-time {

    font-size: 28rpx;
    color: rgb(181, 183, 185);
    margin-top: 20rpx;

    float: right;
    margin-bottom: 20rpx;

}

.image-content {

    width: 160rpx;
    height: 140rpx;

    background-color: rgb(212, 213, 214);

    margin-top: 6px;

    border-radius: 10rpx;

}

.bottom-line {
    display: inline;
    margin-left: 15rpx;
    margin-right: 15rpx;
    height: 1rpx;
    background-color: #5e5353;
    flex-direction: row-reverse;
    position: fixed;
}


.icon {
    width: 25px;
    height: 25px;
    margin-right: 10px;
}