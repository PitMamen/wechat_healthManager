::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
  }
page {
    background-color: #DDEFF3;

}

.navigation-custom-view {
    background: #DDEFF3;
    width: 100%;
    padding-left: 15px;
    position: relative;
}

.navigation-custom-content {
    display: flex;
    flex-direction: row;
    align-items: center;

    width: 100%;
    background: #DDEFF3;
}
.toprightimg{
    position: absolute;
    top: 0;
    right: 0;
    width: 144rpx; 
    height: 108rpx;
}
.mid-view {
    display: flex;
    flex-direction: row;
    width: 702rpx;
    margin-left: 24rpx;
   
    margin-bottom: 20rpx;
    margin-top: 20rpx;

}

.mid-view-item {
    width: 336rpx;
    height: 187rpx;

}
.mid-card {
   
    width: 702rpx;
    margin-left: 24rpx;
    margin-bottom: 20rpx;

    border-radius: 8px;
    background-color: white;
    box-sizing: border-box;
}
.hotServiceList_box {
    position: relative;
    overflow: hidden;
    white-space: nowrap;
    width: 100%;

  }
.hotServiceList_scroll{
    height: 150rpx;
    padding: 20rpx 0;

}
.hotService_content{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-shrink:0;

}
.menu-item{
  
    margin-top: 15rpx;
    width: 140rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink:0;
   
}
.slide{
    height: 20rpx;
   
    width:100%;
   
   }
   .slide .slide-bar{
    width: 80rpx;
    margin:0 auto;
    height: 10rpx;
    background:#eee;
    border-radius: 8rpx;
   }
   .slide .slide-bar .slide-show{
    height:100%;
    border-radius: 8rpx;
    background-color: #409EFF;
   }

.todo-card {
    margin-right: 24rpx;
    margin-left: 24rpx;
    margin-bottom: 20rpx;

    border-radius: 8px;
    background-color: white;
    padding: 20rpx 24rpx;
}


.grid-class {
    --grid-item-content-background-color: transparent !important;

}

.grid-title {
    margin-top: 16rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #1A1A1A;
}

