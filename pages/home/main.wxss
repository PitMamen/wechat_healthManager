page {
    background-color: #DDEFF3;
    width: 100%;
    overflow-x: hidden;
}

.navigation-custom-view {
    background: #DDEFF3;
    width: 100%;
    padding-left: 15px;
}

.navigation-custom-content {
    display: flex;
    flex-direction: row;
    align-items: center;

    width: 100%;
    background: #DDEFF3;
}

.mid-view {
    display: flex;
    flex-direction: row;
    width: 750rpx;
    margin-left: 24rpx;
    margin-right: 24rpx;
    margin-bottom: 20rpx;
    margin-top: 20rpx;

}

.mid-view-item {
    width: 336rpx;
    height: 187rpx;

}

.todo-card {
    margin-right: 24rpx;
    margin-left: 24rpx;
    margin-bottom: 20rpx;

    border-radius: 8px;
    background-color: white;
    padding: 9px 24rpx;
}

.grid-class {
    --grid-item-content-background-color: transparent !important;

}

.grid-title {
    margin-top: 16rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #1A1A1A;
}

/* 待办条目 */
.todo-title-view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.split {
    height: 0.5rpx;
    width: 100%;
    background: #E6E6E6;
}

.todo-title {
    left: 0;
    font-size: 32rpx;
    font-weight: bold;
    color: #1A1A1A;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 20rpx;
}

.todo-title-right {
    margin-left: auto;
    display: flex;
    flex-direction: row;
}



.todo-back {
    display: flex;
    width: 100%;
    flex-direction: row;

    margin-top: 40rpx;
    margin-bottom: 40rpx;
}

.todo-back2 {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    margin-top: 10rpx;
    margin-bottom: 15rpx;
}

.todo-content {
    margin-right: 15rpx;
    margin-left: 20rpx;
    flex-direction: row;
    flex: 1;
}

.todo-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #1A1A1A;
}

.todo-button {
    margin-left: auto;
    width: 108rpx;
    height: 48rpx;
    background-image: linear-gradient(#409EFF, #3A9DFF);
    color: white;
    font-size: 24rpx;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-shadow: 0px 3px 5px 0px rgba(58, 157, 255, 0.35);
    border-radius: 4px;
}

.todo-des {
    color: #999999;
    margin-top: 4px;
    font-size: 26rpx;
    width: 400rpx;
    /* overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; */
}

.todo-image {
    display: flex;
    width: 82rpx;
    height: 82rpx;
    background-color: #F7F8FF;

    border-radius: 50%;
}

