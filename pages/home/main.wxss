.todo-title-view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.split {
    height: 0.5rpx;
    width: 100%;
    background: #eeeeee;
}

.todo-title {
    left: 0;
    font-size: 32rpx;
    font-weight: bold;
    color: #1A1A1A;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-right: 25rpx;
}

.todo-title-right {
    margin-left: auto;
    display: flex;
    flex-direction: row;
}



.todo-back {
    display: flex;
    width: 100%;
    flex-direction: row;

    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.todo-back2 {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    margin-top: 10rpx;
    margin-bottom: 15rpx;
}

.todo-content {
    margin-right: 15rpx;
    margin-left: 20rpx;
    flex-direction: row;
    flex: 1;
}
.todo-btnview{
    flex-direction: row;
}

.todo-name {
    font-size: 28rpx;
   font-weight: bold;
    color: #1A1A1A;
}

.todo-button {
    margin-left: auto;
    width: 108rpx;
    height: 42rpx;
    background-image: linear-gradient(#409EFF, #3A9DFF);
    color: white;
    font-size: 24rpx;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-shadow: 0px 3rpx 5rpx 0px rgba(58, 157, 255, 0.35);
    border-radius: 4rpx;
}

.todo-des {
    color: #999999;
    margin-top: 4px;
    font-size: 25rpx;
    
    /* overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis; */
}

.todo-image {
    display: flex;
    width: 82rpx;
    height: 82rpx;
    background-color: #F7F8FF;

    border-radius: 50%;
}

