.topview{
    display: flex;
    flex-direction: column;
   
    background-color: #ffffff;
    width: 750rpx;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
   justify-content: space-between;
}

.topview .img{
    width: 107rpx;
    height: 111rpx;
    margin-right: 53rpx;
}
.topview .content {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-left: 53rpx;
    color: #1A1A1A;
    font-size: 32rpx;
   
}

.card{
    width: 702rpx;
