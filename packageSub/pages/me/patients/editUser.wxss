  flex-direction: column;
  justify-content: center;
  
}
.save-btn{
  width: 50%; 
  margin-top: 10px; 
  margin-right:10px;
  margin-left: 35rpx;
  float:right;
  height: 80rpx;
  background-color: #0379FF;
  border-radius: 40rpx;
  color: white;
  font-size: 30rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
