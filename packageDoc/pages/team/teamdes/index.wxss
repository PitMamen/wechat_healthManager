.wrap {
  min-height: 100vh;
  background: #F2F4F6;
}

.wrap .background {
  width: 100%;
  height: 400rpx;
  /* background: linear-gradient(180deg, #377EF5, #F1F3FD); */
}

.wrap .card {
  margin: 0 24rpx;
  margin-bottom: 20rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}


.wrap .top {
  position: relative;
  top: 0rpx;
}

.wrap .top .doctor {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx 30rpx 27rpx;
}

.wrap .top .doctor .left {
  padding-right: 30rpx;
}

.wrap .top .doctor .left image {
  width: 160rpx;
  height: 160rpx;
}

.wrap .top .doctor .right {
  padding: 8rpx 0;
  flex: 1;
}

.wrap .top .doctor .right .name {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #141418;
  font-weight: bold;
  line-height: 32rpx;
}

.wrap .top .doctor .right .info {
  margin-bottom: 30rpx;
  font-size: 24rpx;
  line-height: 24rpx;
}

.wrap .top .doctor .right .info .job {
  font-weight: bold;
  color: #141418;
}

.wrap .top .doctor .right .info .depart {
  margin-left: 20rpx;
  font-weight: 400;
  color: #5F5F6B;
}

.wrap .top .doctor .right .server {
  font-size: 28rpx;
  font-weight: 400;
  color: #97979F;
  line-height: 28rpx;
}

.wrap .top .doctor .right .server .num {
  font-size: 36rpx;
  font-weight: 500;
  color: #D7AD65;
  line-height: 36rpx;
}

.wrap .top .doctor .right .share {
  position: absolute;
  width: 98rpx;
  height: 52rpx;
  top: 28rpx;
  right: 138rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: 400;
  color: #0379FF;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #0379FF;
  border-radius: 4rpx;
}

.wrap .top .doctor .right .store {
  position: absolute;
  width: 98rpx;
  height: 52rpx;
  top: 28rpx;
  right: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: 400;
  color: #0379FF;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #0379FF;
  border-radius: 4rpx;
}

.wrap .top .doctor .right .store-active {

  color: #ffffff;
  position: absolute;
  width: 98rpx;
  height: 52rpx;
  top: 28rpx;
  right: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 50rpx;
  text-align: center;
  background-color: #0379FF;
  border-radius: 4rpx;
}

.wrap .top .doctor .right .tags {
  margin-bottom: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #1A1A1A;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.wrap .top .doctor .right .tags .tag {
  margin-right: 10rpx;
  width: 108rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #ffffff;
  background-color: #FFB300;
  border-radius: 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wrap .top .doctor .right .tags .hospital {
  display: inline-block;
  max-width: 245rpx;
  margin-right: 20rpx;
  padding: 5rpx 0;
  white-space: nowrap;
  overflow: hidden;
  color: #1A1A1A;
  text-overflow: ellipsis;
  font-size: 28rpx;
  line-height: 28rpx;
  vertical-align: middle;
}

.wrap .view-intro {
  display: flex;
  flex-direction: column;
}

.wrap .view-intro .intro-item {
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.wrap .view-intro .intro-item .intro-item-top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.wrap .view-intro .intro-item .intro-item-top .top-dot {
  width: 30rpx;
  height: 30rpx;
  background-color: #3894FF;
  border-radius: 15rpx;
}

.view-team{
  margin: 20rpx 24rpx;
  background-color: white;
  border-radius: 8rpx;
  padding: 30rpx 25rpx;
  display: flex;
  flex-direction: column;
}


