/* pages/detail/detail.wxss */
page {
    background-color: #F5F5F5;
}
.htmlcontent {
    padding:110rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box;
}


.namecard2 {
    margin-left: 30rpx;
    padding-right: 30rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #1A1A1A;
    font-size: 36rpx;

}
.article-title {
    margin-bottom: 0.2rem;
    display: flex;
    flex-direction: column;
}

.article-title .title {
    font-size: 20px !important;
    line-height: 28px;
    font-weight: 700;
    color: #3a3a3a;
}

.J-article-content {
    text-align: justify;
}

.article-src-time {
    margin-top: 30rpx;
    font-size: 12px;
    color: #999;
    padding-bottom: 10px;
    border-bottom: 1px solid #e5e5e5;
}

.img-wrap {
    position: relative;
    display: block;
    width: 100%;
    height: 0;
    background-color: rgba(150, 150, 150, 0.1);
    background-repeat: no-repeat;
    background-position: center;
    overflow: hidden;
    background-size: 40%;
}

.article-content .txt {
    word-wrap: break-word;
    font-size: 18px;
    color: #333;
}

.article-content .section {
    line-height: 28px;
    margin-top: 20px;
}