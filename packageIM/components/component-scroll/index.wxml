<!--component/component-scroll/index.wxml-->
<view class='my-scroll'>
  <scroll-view style='height: 100%;' scroll-y bindscroll="scroll" bindtouchstart='touchStart' bindtouchmove='touchMove' bindtouchend='touchEnd'>
    <view class='my-scroll-msgModule my-scroll-refreshModule' style='height:{{refreshHeight+"px"}};line-height:{{pulldownDistance+"px"}}'>
      <view class='my-scroll-refreshModule-content'>
        <image  class='my-scroll-msgModule-icon my-scroll-msgModule-icon-loading' src='../../image/loading.png'></image>
      </view>
    </view>
    <slot></slot>
  </scroll-view>
</view>