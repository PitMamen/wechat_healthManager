@import "voice.wxss";
@import "extra.wxss";

.top-remind-view {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
    background: #F9E7CF;
    font-size: 22rpx;
    color: #7C4C0C;
    padding: 10rpx 30rpx;
}

.tab-view {
    display: flex;
    background-color: white;
    height: 96rpx;
    align-items: center;
    padding: 0 12rpx;
}

.tab-btn {
    margin-left: 12rpx;
    margin-right: 12rpx;
    width: 190rpx;
    height: 56rpx;
    border-radius: 28rpx;
    border-width: 0.5px;
    border-color: #c5daf3;
    border-style: solid;
    color: #1A1A1A;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;

}

.activebtn {
    background-color: #2E8BEB;
    color: white;
}

input {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    width: 100%;
}

.extra-btn-style {
    width: 66rpx;
    height: 66rpx;
    padding: 20rpx 20rpx;
    display: flex;
    flex-shrink: 0;
}

.input-text-voice-super {
    display: flex;
    flex-direction: row;
    background-color: white;
    width: 100%;
    align-items: center;
    height: auto;
    min-height: 100rpx;
    position: relative;
}

.input-flex-column {
    width: 100%;
    display: flex;
    flex-direction: column;
    position: fixed;
    left: 0;
    bottom: 0;
    height: auto;
}

.list-divide-line {
    width: 100%;
    height: 1rpx;
    background-color: #dddddd;
}

.chat-input-style {
    border-radius: 4rpx;
    border: 1rpx solid #CCCCCC;
    margin-top: 25rpx;
    margin-bottom: 25rpx;
    padding: 19rpx 10rpx;
    min-height: 30rpx;
    height: 30rpx;
    font-size: 30rpx;
    width: 515rpx;
    background-color: #ffffff;
    display: flex;
    overflow: inherit;
    align-items: center;
}

.press-style-opacity {
    position: absolute;
    right: 0;
    bottom: 0;


}

.press-style-add {
    position: absolute;
    right: 0;
    bottom: 0;
}

.chat-input-send-button-style {
    width: 90rpx;
    padding: 20rpx 0;
    margin: 25rpx 13rpx;
    font-size: 26rpx;
    text-align: center;
    border-radius: 8rpx;
    background: #3894FF;
    color: white;

}

.extra-btn-add {

    width: 66rpx;
    height: 66rpx;
    padding: 20rpx 20rpx;

    flex-shrink: 0;
}