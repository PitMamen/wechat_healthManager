@import "chat-send-status.wxss";
@import "voice.wxss";
@import "time.wxss";

.content-view {
    display: flex;
    flex-direction: column;
    flex-shrink:0;
    
}

.name {
    font-size: 24rpx;
    color: #999999;
    margin-bottom: 10rpx;
}

.isMyWordStyle {
    background-color: #DCEBFD;
    color: #1A1A1A;
    font-size: 28rpx;
    margin-right: -1rpx;
    margin-left: 14rpx;
    word-wrap: break-word;
    /* box-shadow: 0px 2rpx 4rpx 0px rgba(204,204,204,0.35); */
    border-radius: 20rpx 0px 20rpx 20rpx;
    padding: 30rpx;
    max-width:440rpx;
}

.isOtherWordStyle {
    background-color: white;
    color: #1A1A1A;
    font-size: 28rpx;
    margin-right: 14rpx;
    margin-left: -1rpx;
    word-wrap: break-word;
    /* box-shadow: 0px 2rpx 4rpx 0px rgba(204,204,204,0.35); */
    border-radius: 0px 20rpx 20rpx 20rpx;
    padding: 30rpx;
    max-width:440rpx;
}

.chat-list-pic-style {
    margin-left: 5rpx;
    width: 150rpx;
    height: 280rpx;
}

.voice-duration-my-style {
    color: #1A1A1A;
    font-size: 26rpx;
    align-self: center;
    margin-right: 25rpx;
}

.voice-duration-other-style {
    color: #1A1A1A;
    font-size: 26rpx;
    align-self: center;
    margin-left: 25rpx;
}

.chat-list-arrow-style {
    width: 11rpx;
    height: 20rpx;
    margin-top: 25rpx
}

.video-message {
    width: 200px;
    height: 200px;

}

.video-box {
    width: 100%;
    height: 100%;
}

.my-video {
    border-radius: 10px 2px 10px 10px;
}

.video-box-img {
    width: 180rpx;
    height: 320rpx;
    background-color: black;
    border-radius: 10rpx;
    display: flex;
    position: relative;

}

.video-icon {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 70rpx;
    height: 70rpx;

}

.video-img {
    position: relative;
    width: 180rpx;
    height: 320rpx;
    border-radius: 10rpx;
}