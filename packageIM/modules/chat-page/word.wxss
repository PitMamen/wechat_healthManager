@import "chat-send-status.wxss";
@import "voice.wxss";
@import "time.wxss";
.isMyWordStyle {
    background-color: #8fcbf7;
    color: #213d52;
    margin-right: -1rpx;
    margin-left: 14rpx;
    word-wrap: break-word;
}

.isOtherWordStyle {
    background-color: white;
    color: #333333;
    margin-right: 14rpx;
    margin-left: -1rpx;
    word-wrap: break-word;
}

.chat-list-pic-style {
    border-radius: 10rpx;
    margin-left: 5rpx;
    width: 150rpx;
    height: 280rpx;
}

.voice-duration-style {
    color: #666666;
    font-size: 26rpx;
    align-self: center;
    margin-top: 3rpx;
    margin-left: 5rpx;
}

.chat-list-arrow-style {
    width: 11rpx;
    height: 20rpx;
    margin-top: 25rpx
}

.video-message {
    width: 200px;
    height: 200px;

  }
  .video-box {
    width: 100%;
    height: 100%;
  }
  .my-video {
    border-radius: 10px 2px 10px 10px;
  }
  .video-box-img {
	width: 180rpx;
	height: 320rpx;
	background-color: black;
	border-radius: 10rpx;
    display: flex;
    position: relative;

}
.video-icon {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50% , -50%);
	width: 70rpx;
    height: 70rpx;
    
}
.video-img{
    position: relative;
	width: 180rpx;
    height: 320rpx;
    border-radius: 10rpx;
}