<import src="./time.wxml" />
<import src="./mark.wxml" />
<import src="./ai-custom.wxml" />
<import src="./word.wxml" />
<template name="chat-item">
    <view style="width: 100%;display: flex;flex-direction: column;align-items: center">
        <template is="chat-time" data="{{showTime:item.isShowTime,time:item.time}}" />
    
        <block wx:if="{{item.type!=='TIMCustomElem'}}">         
            <template  is="chat-word"
                data="{{length:length,index:index,headUrl:avatar?avatar:'../../../image/avatar.png',isMy:item.flow=== 'out',content:item.payload,type:item.type,sendStatus:item.status}}" />
        </block>

        <!-- 用扩展字段 item.payload.extension标识不同类型-->
        <block wx:else>

            <block wx:if="{{item.payload.customType ==='TIMCustomMarkTYPE'}}">         
                <template is="chat-mark" data="{{customData:item.payload}}" />
            </block>

            <template wx:else is="ai-chat-custom"
                data="{{length:length,index:index,headUrl:avatar?avatar:'../../../image/avatar.png',isMy:item.flow=== 'out',content:item.payload,type:item.payload.customType,sendStatus:item.status,patientList:patientList}}" />
        </block>
    </view>
</template>